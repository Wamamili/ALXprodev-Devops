#!/bin/bash
# Script to fetch data for Pikachu and save to data.json

URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT="data.json"
ERROR_LOG="errors.txt"

# Make API request and handle errors
if curl -s -f "$URL" -o "$OUTPUT"; then
    echo "✅ Data saved to $OUTPUT"
else
    echo "❌ Failed to fetch data from $URL" >> "$ERROR_LOG"
    echo "Error logged to $ERROR_LOG"
fi
