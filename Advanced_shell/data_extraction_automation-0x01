#!/bin/bash
# Script: data_extraction_automation-0x01
# Purpose: Extract Pokémon name, type, weight, and height from data.json

# Ensure the JSON file exists
if [ ! -f data.json ]; then
  echo "Error: data.json not found. Please run apiAutomation-0x00 first."
  exit 1
fi

# Extract data using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # capitalize first letter
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')
weight=$(jq -r '.weight' data.json)
height=$(jq -r '.height' data.json)

# Format height and weight (PokéAPI gives them in decimeters and hectograms)
formatted_weight=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")
formatted_height=$(awk "BEGIN {printf \"%.1f\", $height / 10}")

# Display result
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
